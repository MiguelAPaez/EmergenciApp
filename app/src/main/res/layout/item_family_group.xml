<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutFamilyGroup"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/boton_redondeado"
        android:orientation="horizontal"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/imageViewFamilyGroup"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.3"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/linearLayoutFamilyGroupText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameFamilyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Familiar"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/relationshipFamilyGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parentesco"
                android:layout_gravity="center"
                android:textColor="@color/colorGray"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>