<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".HealthQuestionsLesiones">


<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:ignore="MissingConstraints">

<LinearLayout
    android:id="@+id/linearLayoutTitleMain"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:color="@color/colorBlack"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.538"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/QuestionsLesiones"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="28dp" />
</LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridLayoutQuestionLesiones"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:columnCount="2"
            android:rowCount="4"
            android:textAlignment="center">

            <LinearLayout
                android:id="@+id/linearLayoutCabeza"
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/shape_main_1"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageViewCabeza"
                    android:layout_width="122dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/aa13d6cfd9325ea898a83b724cff4f86" />

                <TextView
                    android:id="@+id/titleCabeza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:text="@string/cabeza"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutTorax"
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/shape_main_1"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageViewPecho"
                    android:layout_width="110dp"
                    android:layout_height="139dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/aa13d6cfd9325ea898a83b724cff4f86_1_" />

                <TextView
                    android:id="@+id/titlePecho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:text="@string/torax"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPelvis"
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/shape_main_1"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageViewCorazon"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/aa13d6cfd9325ea898a83b724cff4f86_3_" />

                <TextView
                    android:id="@+id/titleCorazon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:text="@string/abdomen_bajo_y_pelvis"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutExtremidades"
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/shape_main_1"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageViewGarganta"
                    android:layout_width="111dp"
                    android:layout_height="133dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/aa13d6cfd9325ea898a83b724cff4f86_4_" />

                <TextView
                    android:id="@+id/titleGarganta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:text="@string/extremidades"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEspalda"
                android:layout_width="155dp"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/shape_main_1"
                android:orientation="vertical"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageViewEspalda"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/espalda2" />

                <TextView
                    android:id="@+id/titleEspalda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:text="@string/espalda"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </GridLayout>

    </LinearLayout>
</ScrollView>
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>