<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@colors/colorBackground"
    tools:context=".pantallaOpcionesDeEmergencias">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/texto__pantallaEscogerEmergencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TituloPantallaEscogeremergencia"
                android:textSize="30sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:id="@+id/imagePreviewESalud"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:gravity="center|top"
                android:hapticFeedbackEnabled="false"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/buttonESalud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="0dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/boton_redondeado"
                    android:gravity="bottom|center"
                    android:text="@string/textoBottonESalud"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageViewESalud"
                    android:layout_width="wrap_content"
                    android:layout_height="77dp"
                    android:elevation="2dp"
                    app:srcCompat="@drawable/hospital" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:id="@+id/imagePreviewESeguridad"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:gravity="center|top"
                android:hapticFeedbackEnabled="false"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/buttonESeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="0dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/boton_redondeado"
                    android:gravity="bottom|center"
                    android:text="@string/textoBottonESeguridad"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageViewESeguridad"
                    android:layout_width="wrap_content"
                    android:layout_height="77dp"
                    android:elevation="2dp"
                    app:srcCompat="@drawable/guardia" />

            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:id="@+id/imagePreviewEBomberos"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:gravity="center|top"
                android:hapticFeedbackEnabled="false"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/buttonEBomberos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="0dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/boton_redondeado"
                    android:gravity="bottom|center"
                    android:text="@string/textoBottonEBomberos"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageViewEBomberos"
                    android:layout_width="wrap_content"
                    android:layout_height="77dp"
                    android:elevation="2dp"
                    app:srcCompat="@drawable/bombero" />

            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:id="@+id/imagePreviewECasera"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:gravity="center|top"
                android:hapticFeedbackEnabled="false"
                android:orientation="vertical"
                android:padding="0dp">

                <Button
                    android:id="@+id/buttonECasera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right|center"
                    android:layout_marginBottom="0dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/boton_redondeado"
                    android:gravity="bottom|center"
                    android:text="@string/textoBottonECasera"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageViewECasera"
                    android:layout_width="wrap_content"
                    android:layout_height="77dp"
                    android:elevation="2dp"
                    app:srcCompat="@drawable/casa" />

            </RelativeLayout>




        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
