<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".EmergencyOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayoutTitleEmergencyOptions"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/TituloPantallaEscogeremergencia"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="27dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayoutHealthEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/shape_main_1"
                    android:textAlignment="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewHealth"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/redcross"/>

                    <TextView
                        android:id="@+id/titleHealthEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/textoBottonESalud"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="28dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSecurityEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/shape_main_1"
                    android:textAlignment="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewSecurity"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/guardia"/>

                    <TextView
                        android:id="@+id/titleSecurityEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/textoBottonESeguridad"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="28dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutFireFightersEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/shape_main_1"
                    android:textAlignment="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewFireFighters"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/fire"/>

                    <TextView
                        android:id="@+id/titleFireFightersEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/textoBottonEBomberos"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="28dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutHouseEmergency"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/shape_main_1"
                    android:textAlignment="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewHouse"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="0.8"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/house"/>

                    <TextView
                        android:id="@+id/titleHouseEmergency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:text="@string/textoBottonECasera"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="28dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>