<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".FamilyGroupHealth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayoutTitleFamilyGroupHealth"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleFamilyGroupHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/familyGroup_question"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="25sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollViewRegister"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayoutFamilyGroupHealth1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/boton_redondeado"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <ImageView
                        android:id="@+id/imageViewFamilyGroupHealth1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/incognito" />

                    <LinearLayout
                        android:id="@+id/linearLayoutFamilyGroupTextHealth1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameFamilyGroupHealth1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre MÃ­o"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/relationshipFamilyGroupHealth1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yo"
                            android:layout_gravity="center"
                            android:textColor="@color/colorGray"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutFamilyGroupHealth2"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/boton_redondeado"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <ImageView
                        android:id="@+id/imageViewFamilyGroupHealth2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/incognito" />

                    <LinearLayout
                        android:id="@+id/linearLayoutFamilyGroupHealthText2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameFamilyGroupHealth2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre Familiar"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/relationshipFamilyGroupHealth2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Parentesco"
                            android:layout_gravity="center"
                            android:textColor="@color/colorGray"
                            android:textSize="18dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutFamilyGroupHealth3"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/boton_redondeado"
                    android:orientation="horizontal"
                    android:textAlignment="center">

                    <ImageView
                        android:id="@+id/imageViewFamilyGroupHealth3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/incognito" />

                    <LinearLayout
                        android:id="@+id/linearLayoutFamilyGroupHealthText3"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameFamilyGroupHealth3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Otro"
                            android:layout_gravity="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="22dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>